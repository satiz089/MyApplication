<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_weight="100"
    tools:context="com.daimajia.slider.demo.MainActivity">

    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="-15dp"

        android:weightSum="100">-->
    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/slider"
        android:layout_width="match_parent"
        custom:pager_animation="Accordion"
        custom:auto_cycle="true"
        custom:indicator_visibility="visible"
        custom:pager_animation_span="1100"
        android:layout_height="180dp"
        />

    <com.daimajia.slider.library.Indicators.PagerIndicator
        android:id="@+id/custom_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        custom:selected_color="#0095BF"
        custom:unselected_color="#55333333"

        custom:shape="oval"
        custom:selected_padding_left="5dp"
        custom:selected_padding_right="5dp"
        custom:unselected_padding_left="5dp"
        custom:unselected_padding_right="5dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        custom:selected_width="6dp"
        custom:selected_height="6dp"
        custom:unselected_width="6dp"
        custom:unselected_height="6dp"

        />
   <!-- <com.daimajia.slider.library.Indicators.PagerIndicator
        android:id="@+id/custom_indicator2"
        style="@style/AndroidImageSlider_Corner_Oval_Orange"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        />-->

    <!--</LinearLayout>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:scaleY="0.8"
        android:weightSum="90">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">









            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:scaleY="0.8"
                android:weightSum="90"
                android:layout_marginBottom="0dp"
                >



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="90"
                    android:layout_weight="30"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/selected_video"

                    >

                    <Button
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:background="@drawable/select_video"
                        android:layout_weight="10"

                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="50"
                        android:text="VIDEOS"
                        android:textColor="#df5020"
                        android:textSize="16dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="10dp"/>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="#dc6b14" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="90"
                    android:layout_weight="30"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:visibility="invisible"
                    android:id="@+id/selected_image">

                    <Button
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:background="@drawable/select_image"
                        android:layout_weight="30"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="20"
                        android:text="IMAGES"
                        android:textSize="16dp"
                        android:textColor="#df5020"
                        android:paddingBottom="5dp"
                        android:paddingTop="10dp"/>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="#df5020" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="90"
                    android:layout_weight="30"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:visibility="invisible"
                    android:id="@+id/selected_milestone">

                    <Button
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:background="@drawable/select_milestone"
                        android:layout_weight="30"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="20"
                        android:text="MILESTONES"
                        android:textColor="#df5020"
                        android:textSize="16dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="10dp"/>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="#dc6b14" />


                </LinearLayout>



            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:scaleY="0.8"
                android:weightSum="90"
                android:layout_marginBottom="0dp"
                >



                <LinearLayout
                    android:id="@+id/select_video"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="90"
                    android:layout_weight="30"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:visibility="invisible"
                    >

                    <Button
                        android:id="@+id/video_button"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:background="@drawable/video"
                        android:layout_weight="10"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="50"
                        android:text="VIDEOS"
                        android:textSize="16dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="10dp"/>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="#b4b1b1" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/select_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="90"
                    android:layout_weight="30"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <Button
                        android:id="@+id/image_button"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:background="@drawable/image"
                        android:layout_weight="30"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="20"
                        android:text="IMAGES"
                        android:textSize="16dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="10dp"/>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="#b4b1b1" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/select_milestone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="90"
                    android:layout_weight="30"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <Button
                        android:id="@+id/milestone_button"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:background="@drawable/milestone"
                        android:layout_weight="30"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="20"
                        android:text="MILESTONES"
                        android:textSize="16dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="10dp"/>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="#b4b1b1" />


                </LinearLayout>



            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>


    <ListView
        android:layout_below="@+id/slider"
        android:id="@+id/transformers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"></ListView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#c6c6c6">
 <ListView

        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
     android:dividerHeight="4dp"
     android:divider="@null"
     android:background="#fff"
     android:overScrollMode="never"
     android:paddingLeft="5dp"
     android:paddingRight="5dp">

 </ListView>

    </LinearLayout>


</LinearLayout>
